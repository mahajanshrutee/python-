def add_numbers(a, b):
"""Calculate and return the sum of two
numbers."""return a + b
def multiply_numbers(a, b):
"""Calculate and return the product of two
numbers."""return a * b
def main():
# Get user input
num1 = float(input("Enter the first number:
")) num2 = float(input("Enter the second
number: "))
